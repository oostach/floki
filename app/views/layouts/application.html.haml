!!!
%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type' }/
    %title Floki
    %meta{ content: 'width=device-width,initial-scale=1', name: 'viewport' }/
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag 'application', 'data-turbo-track': 'reload'
    = stylesheet_link_tag 'tailwind', 'data-turbo-track': 'reload'
    = javascript_importmap_tags

  %body{ class: 'font-inter bg-gray-200 p-2.5', data: { icon_path: { jpg: "#{asset_path('icons/png/file-types/jpg.png')}", png: "#{asset_path('icons/png/file-types/png.png')}", avi: "#{asset_path('icons/png/file-types/avi.png')}", html: "#{asset_path('icons/png/file-types/html.png')}", pdf: "#{asset_path('icons/png/file-types/pdf.png')}" }.to_json } }
    .w-full
      %header.rounded-lg.bg-sky-300.h-20.shadow-lg= render 'layouts/header'
      = render 'layouts/flash'
      %main.container.bg-slate-100.rounded-md.mt-4.p-4.mx-auto= yield
      %footer
