= turbo_stream_from 'projects_repositories'

= page_title do
  = link_to t('.add_project'), new_project_path, data: { turbo_frame: 'project-form' }, class: 'button-primary'

= turbo_frame_tag 'project-form'

= turbo_frame_tag :projects, class: 'publications' do
  - if @projects.present?
    = render @projects
  - else
    = turbo_frame_tag(:blankslate) do
      = render BlankSlateComponent.new(:projects, t('.blank_slate_message'), t('.blank_slate_description')) do |wrapper|
        - wrapper.with_actions do
          = link_to t('.add_project'), new_project_path, data: { turbo_frame: 'project-form' }, class: 'button-primary'
