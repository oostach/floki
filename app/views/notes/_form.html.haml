.notes-form{ data: { controller: 'notes--form' } }
  = form_with model: note do |f|
    .form-group.mb-2
      = f.label :title
      = f.text_field :title, class: 'form-input px-2 py-1 rounded w-full'
    .form-group.mb-2
      = f.label :body, 'Content'
      = f.rich_text_area :body, class: 'form-input px-2 py-1 rounded w-full'
    .form-group
      = f.submit class: 'button-primary'
      - if note.persisted?
        = link_to 'Cancel', note_path(note), class: 'button-secondary'
      - else
        = link_to 'Cancel', '#', class: 'button-secondary', data: { action: 'click->notes--form#cancel' }

  %hr.my-3.-mx-4.border-gray-300
